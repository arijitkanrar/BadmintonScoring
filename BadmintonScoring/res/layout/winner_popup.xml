<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winner_popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/winner_popup_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="@color/winner_text_colour"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnWinNewGameCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winNewGameCTBtnStr" />

    <Button
        android:id="@+id/btnWinNewGameNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winNewGameNTBtnStr" />

    <Button
        android:id="@+id/btnWinDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winDoneBtnStr" />

</LinearLayout>